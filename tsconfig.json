{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./@types/fastify"]
  },
  "include": ["src/**/*.ts", "@types/**/*.ts"]
}
